<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Name"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Movie"
            android:id="@+id/movie"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Description"

    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="5"
            android:id="@+id/description"

    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:text="Language"/>

    <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/english">
        <RadioButton
                android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"


        />
        <RadioButton
                android:id="@+id/chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"


        />
        <RadioButton
                android:id="@+id/malay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malay"


        />
        <RadioButton
                android:id="@+id/tamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamil"


        />
    </RadioGroup>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Release Date"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText"/>
    <CheckBox
            android:text="Not suitable for all audience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <CheckBox
                android:text="Violence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox1" android:layout_weight="1"
                android:visibility="invisible"/>
        <CheckBox
                android:text="Language used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox2" android:layout_weight="1"
                android:visibility="invisible"/>
    </RadioGroup>
    <Button
            android:text="Add Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"/>

</LinearLayout>